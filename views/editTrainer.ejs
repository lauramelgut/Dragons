<%- include('navbar') %>
<div class="container-fluid">
  <div class="row editTrainer">
    <div class="col"></div>
    <div class="col">
      <form
        action="/trainer/editTrainer/<%- result[0].trainer_id %>"
        method="post"
        enctype="multipart/form-data"
      >
        <input
          class="form-control form-control-lg my-3"
          type="text"
          placeholder="Nombre"
          aria-label=".form-control-lg example"
          name="name"
          required
          value="<%- result[0].name %>"
        />
        <input
          class="form-control form-control-lg my-3"
          type="text"
          placeholder="Apellidos"
          aria-label=".form-control-lg example"
          name="last_name"
          value="<%- result[0].last_name %>"
        />
        <input
          class="form-control form-control-lg my-3"
          type="email"
          placeholder="Email"
          aria-label=".form-control-lg example"
          name="email"
          required
          value="<%- result[0].email %> "
        />
        <input
          class="form-control form-control-lg my-3"
          type="password"
          placeholder="Introduce una nueva contraseña"
          aria-label=".form-control-lg example"
          name="password"
        />
        <div class="mb-3">
          <label for="exampleFormControlTextarea1" class="form-label"
            >Descripción</label
          >
          <textarea
            class="form-control"
            id="exampleFormControlTextarea1"
            rows="3"
            name="description"
            value="<%- result[0].description %>"
          ></textarea>
        </div>
        <input
          class="form-control form-control-lg my-3"
          type="phone"
          placeholder="Teléfono"
          aria-label=".form-control-lg example"
          name="phone"
          required
          value="<%- result[0].phone %>"
        />
        <div class="my-3">
          <label for="formFileLg" class="form-label"
            >Introduce una nueva imagen de perfil</label
          >
          <input
            class="form-control form-control-lg"
            id="formFileLg"
            type="file"
            name="img"
          />
        </div>
        <button type="submit" class="btn btn-primary mb-3">
          Guardar datos
        </button>
      </form>
      <br /><br />
    </div>
    <div class="col"></div>
  </div>
</div>
<%- include('footer') %>
