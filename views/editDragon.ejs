<%- include('navbar') %>
<div class="container-fluid">
  <div class="row editDragon">
    <div class="col"></div>
    <div class="col">
      <form
        action="/dragon/editDragon/<%- result[0].dragon_id %>/<%- result[0].trainer_id %>"
        method="post"
        enctype="multipart/form-data"
      >
        <input
          class="form-control form-control-lg my-3"
          type="text"
          placeholder="Nombre del Dragón"
          aria-label=".form-control-lg example"
          name="dragon_name"
          required
          value="<%- result[0].dragon_name %>"
        />

        <div class="mb-3">
          <label for="exampleFormControlTextarea1" class="form-label"
            >Descripción</label
          >
          <textarea
            class="form-control"
            id="exampleFormControlTextarea1"
            rows="3"
            name="description"
          >
            <%= result[0].description %></textarea
          >
        </div>

        <div class="my-3">
          <label for="formFileLg" class="form-label"
            >Introduce una nueva Foto de tu Dragón</label
          >

          <input
            class="form-control form-control-lg"
            id="formFileLg"
            type="file"
            name="img"
          />
        </div>
        <button type="submit" class="btn btn-primary mb-3">
          Guardar datos
        </button>
      </form>
      <br /><br />
    </div>
    <div class="col"></div>
  </div>
</div>
<%- include('footer') %>
